{
  "manifest_version": 3,
  "name": "Hot Ad Blocker",
  "version": "1.1",
  "description": "Blocks ads on Hotstar video player and provides a toggle to enable/disable.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hotstar.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}